@model List<Client.ViewModels.Customer>

<h1>Customer List</h1>

<div>
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
    <form asp-action="DeleteSelected" method="post">
        @Html.AntiForgeryToken()
        <table class="table">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Username</th>
                    <th>Fullname</th>
                    <th>Gender</th>
                    <th>Birthday</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedUsernames" value="@customer.Username" />
                        </td>
                        <td>@customer.Username</td>
                        <td>@customer.Fullname</td>
                        <td>@customer.Gender</td>
                        <td>@customer.Birthday.ToShortDateString()</td>
                        <td>@customer.Address</td>
                        <td>
                            <a asp-action="Details" asp-route-username="@customer.Username" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-username="@customer.Username" class="btn btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-danger">Delete Selected</button>
    </form>
</div>
